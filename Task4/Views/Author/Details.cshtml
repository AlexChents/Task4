@model Task4.Models.Author

@{
    ViewData["Title"] = "Details";
}

<h1>Подробиці</h1>

<div id="detailsBooksAuthor">
    <h4>Автор</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => Model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => Model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => Model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => Model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => Model.MiddleName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => Model.MiddleName)
        </dd>
    </dl>
</div>
<div style="display: flex;
     justify-content: space-between;">
    <h4>Книги</h4>
    <button type="button" id="btnAddBook" class="btn btn-primary" data-toggle="modal" data-target="#bookAddModal">Додати книжку</button>
    <input type="hidden" id="authorIdData" value="@Model.Id" />
</div>
<div id="booksData">

</div>
<hr />
<div>
    <input type="submit" id="addToDB" value="Зберегти" class="btn btn-primary"/>
</div>

@await Html.PartialAsync("_PartialBookAddView", new Book(){ AuthorId = Model.Id})
