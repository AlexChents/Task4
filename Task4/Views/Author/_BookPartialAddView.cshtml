@model Book
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="addBookLabel" role="dialog">
    <div class="modal-dialog draggable" role="document">
        <div class="modal-content" id="dialogContent">
            <form asp-action="AddBook" method="post">
                <div class="modal-header">
                    <h4 class="modal-title" id="addBookLabel">Книжка</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="modalClose();">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GenreId" class="control-label"></label>
                        <select asp-for="GenreId" class="form-control" asp-items="@ViewBag.Genres"><option>Виберіть жанр</option></select>
                        <span asp-validation-for="GenreId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CountPages" class="control-label"></label>
                        <input asp-for="CountPages" class="form-control" />
                        <span asp-validation-for="CountPages" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрити</button>
                    <input type="hidden" id="authorIdAddBook" asp-for="@Model.AuthorId" />
                    <input type="submit" value="Додати" class="btn btn-primary" />
                 </div>
             </form>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $.ajax({
                url: "/Genre/Index,
                success: function (data) {
                    $("#genresList").html(data);
                    console.log(data);
                }
            });
        });

    </script>
}